@model IEnumerable<W2_D5_Progetto_Settimanale_Andrea_Guarnieri.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="~/@product.MainImage" class="card-img-top" alt="@product.Name" style="max-height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title" style="color: black;">@product.Name</h5>
                        <p class="card-text" style="color: black;">@product.Price.ToString("C")</p>
                        <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
